  </head>
  <body>
<div class="ui-layout-center">
    <div id="Chart"></div>
</div>
<div class="ui-layout-west">
    <div id="ConfigurationPane"></div>
</div>
<div class="ui-layout-east">
  <table border="1">
    <tr><td>Dex Data Length:</td><td><%= dex.data.size() %></td></tr>
    <tr><td>Membership Length:</td><td><%= membership.length %></td></tr>  </table>
</div>
<script>
<%
  def dd = dex.head(100)
  
  // Prepend row number, cluster number to data
  membership.eachWithIndex {
    cluster, ri ->
    if (ri < 100) {
      dd.data[ri] = [ cluster, ri + 1 ].plus(data[ri])
    }
  }
  dd.header = [ "Cluster", "Sample" ].plus(header)
  println dd.toCsvString()
%>

  \$(document).ready(function () {

    \$('body').layout({
      applyDemoStyles: false,
      west: {
        size: 250
      },
      east: {
        size: 250
      },
      onresize: function () {
        chart.resize();
      }
    });

    var chart = dex.charts.echarts.LineChart({
      "parent" : "#Chart",
      "series.type": "scatter",
      "csv" : csv});

    chart.render();
    
    var configPane = dex.ui.ConfigurationPane({
      "parent": "#ConfigurationPane",
      "csv": csv,
      "components": [chart]
    }).render();
  });
</script>

  </body>
</html>
