NAME='dbg.dc+ds.swstep'
FILE=../bins/elf/analysis/elf-nx
ARGS=-d
CMDS=<<EOF
e scr.color=0
e dbg.swstep=true
s 0
db entry0
dc
db-entry0
dr PC
ds
dr PC
p8 1@sym.main
dk 9
EOF
EXPECT=<<EOF
0x080482d0
0x080482d2
55
EOF
RUN

NAME='dbg.dc+ds.swstep2'
FILE=../bins/elf/analysis/x86-helloworld-gcc
ARGS=-d
