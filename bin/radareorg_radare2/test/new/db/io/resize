ARGS=-w
FILE=.resize.V1OzXt
EXPECT=<<EOF
0
0xa
0x4
0xa
EOF
CMDS=<<EOF
i~^size[1]
r 10
i~^size[1]
r 4
i~^size[1]
r+6
i~^size[1]
!rm ${R2_FILE}
EOF
RUN

